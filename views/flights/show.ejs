<%- include('../partials/header') %>


<h2>Departure:</h2>
<table>
    <thead>
        <tr>
            <th>Airline</th>
            <th>Airport</th>
            <th>Flight Number</th>
            <th>Departure Date</th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <td>
                    <%= flight.airline %>
                </td>
                <td>
                    <%= flight.airport %>
                </td>
                <td>
                    <%= flight.flightNo %>
                </td>
                <td>
                    <%= flight.departure.toLocaleDateString() %>
                </td>
            </tr>
    </tbody>
</table>

<h2>Destination:</h2>
<% if (flight.destinations.length) { %>
<table>
    <thead>
        <tr>
            <th>Airport</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        <% flight.destinations.forEach(function(d) { %>
        <tr>
            <td><%= d.airport %></td>
            <td><%= d.arrival.toLocaleDateString() %></td>
        </tr>
        <% }); %>
    </tbody>
</table>
    <% } else { %>
    <h5>No Destinations Yet</h5>
    <% } %>


<h2>ADD YOUR DESTINATION</h2>
<form action="/flights/<%= flight._id %>/destinations" method="POST">
    <label>Destination Airport:
        <select name="airport">
            <option value="AUS">AUS</option>
            <option value="DFW">DFW</option>
            <option value="DEN">DEN</option>
            <option value="LAX">LAX</option>
            <option value="SAN">SAN</option>
        </select>
    </label><br>
    <label>Arrival Date:
        <input type="datetime-local" required name="arrival">
    </label><br>
    <input type="submit" value="Add Arrival Information">
</form>

<h2>Tickets:</h2>
<% if (tickets.length) { %>
<table>
    <thead>
        <tr>
            <th>Seat Number:</th>
            <th>Price:</th>
        </tr>
    </thead>
    <tbody>
        <% tickets.forEach(function(t) { %>
        <tr>
            <td>
                <%= t.seat %>
            </td>
            <td>
                $<%= t.price.toFixed(2) %>
            </td>
        </tr>
        <% }); %>
    </tbody>
</table>
<% } else { %>
<h5>No Tickets Yet</h5>
<% } %>

<h2>PURCHASE YOUR TICKET</h2>

<form action="/flights/<%= flight._id %>/tickets" method="POST">
    <label>Seat:
        <div>Please choose: A-F followed by a seat number 1-99</div>
        <input name="seat" required pattern="[A-F][1-9]\d?">
    </label><br>
    <label>Price (Between $199 and $599):
        <input min="199" max="599" type="number" name="price">
    </label><br>
    <input type="submit" value="New Ticket" id="button">
</form>

<%- include('../partials/footer') %>